<?xml version="1.0" encoding="utf-8"?>
<!--
    Widget Preview Image for Launcher Widget Picker
    Shows a visual representation of the Calm Burst widget
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background card -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/brown_200" />
        </shape>
    </item>

    <!-- Content area with padding -->
    <item
        android:top="16dp"
        android:left="16dp"
        android:right="16dp"
        android:bottom="16dp">
        <layer-list>

            <!-- Quote text representation (horizontal lines) -->
            <item android:top="8dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/text_primary" />
                    <size android:height="3dp" />
                </shape>
            </item>

            <item android:top="20dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/text_primary" />
                    <size android:height="3dp" />
                </shape>
            </item>

            <item android:top="32dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/text_primary" />
                    <size android:height="3dp" />
                </shape>
            </item>

            <!-- Author text representation (shorter line) -->
            <item android:top="50dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/text_secondary" />
                    <size android:height="2dp" android:width="100dp" />
                </shape>
            </item>

            <!-- Refresh icon representation (small circle at bottom right) -->
            <item
                android:gravity="bottom|end"
                android:bottom="4dp"
                android:right="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/brown_700" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>

        </layer-list>
    </item>

</layer-list>

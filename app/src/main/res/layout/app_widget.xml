<?xml version="1.0" encoding="utf-8"?>
<!--
    Home Screen Widget Layout (4x2 recommended size)
    RemoteViews-compatible components only
    Material Design 3 brown color scheme
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!-- Widget Container Card -->
    <FrameLayout
        android:id="@+id/widget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/widget_background">

        <!-- Content Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Quote Text -->
            <TextView
                android:id="@+id/widget_quote_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/widget_tap_to_load"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:lineSpacingMultiplier="1.3"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:maxLines="4"
                android:ellipsize="end"
                android:contentDescription="@string/widget_quote_description" />

            <!-- Bottom Row: Author, Year, and Refresh Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <!-- Author and Year Container -->
                <LinearLayout
                    android:id="@+id/author_year_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/widget_refresh_button"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <!-- Author Text -->
                    <TextView
                        android:id="@+id/widget_author_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€” Unknown"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="italic"
                        android:fontFamily="serif"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Year Text -->
                    <TextView
                        android:id="@+id/widget_year_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text=""
                        android:textSize="11sp"
                        android:textColor="@color/brown_300"
                        android:fontFamily="sans-serif"
                        android:maxLines="1" />

                </LinearLayout>

                <!-- Refresh Button Area -->
                <FrameLayout
                    android:id="@+id/widget_refresh_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/widget_button_background"
                    android:contentDescription="@string/widget_refresh_description">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_rotate"
                        android:tint="@color/brown_700"
                        android:contentDescription="@string/widget_refresh_description" />

                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Row with Title and Settings Button -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/home_title"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settings_button"
            app:layout_constraintHorizontal_chainStyle="spread_inside" />

        <!-- Settings Button - Now in header -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:contentDescription="@string/settings_icon_description"
            app:icon="@android:drawable/ic_menu_preferences"
            app:iconGravity="textStart"
            app:cornerRadius="24dp"
            style="@style/Widget.Material3.Button.IconButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/title_text" />

        <!-- Spacer below header -->
        <View
            android:id="@+id/header_spacer"
            android:layout_width="0dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Quote Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/quote_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/surface"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:contentPadding="24dp"
            app:layout_constraintTop_toBottomOf="@id/header_spacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Quote Text -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/quote_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingMultiplier="1.3"
                    android:fontFamily="serif"
                    android:contentDescription="@string/quote_text_description"
                    android:importantForAccessibility="yes"
                    tools:text="The only way to do great work is to love what you do."
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Author -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/author_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="italic"
                    android:fontFamily="serif"
                    tools:text="â€” Steve Jobs"
                    app:layout_constraintTop_toBottomOf="@id/quote_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Year -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/year_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif"
                    tools:text="2005"
                    app:layout_constraintTop_toBottomOf="@id/author_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Context -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/context_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/primary_light"
                    android:lineSpacingMultiplier="1.2"
                    android:fontFamily="sans-serif"
                    tools:text="Stanford Commencement Address"
                    app:layout_constraintTop_toBottomOf="@id/year_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Empty State (when no quote) -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/empty_state_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/no_quote_yet"
            android:textSize="20sp"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:paddingTop="48dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/header_spacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="gone" />

        <!-- New Quote Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/new_quote_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/new_quote"
            android:textSize="16sp"
            android:minHeight="48dp"
            android:paddingHorizontal="32dp"
            app:icon="@android:drawable/ic_menu_rotate"
            app:iconGravity="textStart"
            app:cornerRadius="24dp"
            app:layout_constraintTop_toBottomOf="@id/quote_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
